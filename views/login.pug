extends base.pug

block content   
    // Breadcrumb Section Begin
    .breacrumb-section
        .container
            .row
                .col-lg-12
                    .breadcrumb-text
                        a(href='#')
                            i.fa.fa-home
                                |  Home
                        span Login
    // Breadcrumb Form Section Begin
    // Register Section Begin
    .register-login-section.spad
        .container
            .row
                .col-lg-6.offset-lg-3
                    .login-form
                        h2 Login
                        form.login-form
                            .group-input
                                label(for='username') Email address *
                                input#email(type='text' name='email')
                            .group-input
                                label(for='pass') Password *
                                input#password(type='text' name='password')
                            .group-input.gi-check
                                .gi-more
                                    label(for='save-pass')
                                        | Save Password
                                        input#save-pass(type='checkbox')
                                        span.checkmark
                                    a.forget-pass(href='#') Forget your Password
                            button#loginBtn.site-btn.login-btn(type='submit') Sign In
                        .switch-login
                            a.or-login(href='./register.html') Or Create An Account
    // Register Form Section End
    // Partner Logo Section Begin
    .partner-logo
        .container
            .logo-carousel.owl-carousel
                .logo-item
                    .tablecell-inner
                        img(src='img/logo-carousel/logo-1.png' alt='')
                .logo-item
                    .tablecell-inner
                        img(src='img/logo-carousel/logo-2.png' alt='')
                .logo-item
                    .tablecell-inner
                        img(src='img/logo-carousel/logo-3.png' alt='')
                .logo-item
                    .tablecell-inner
                        img(src='img/logo-carousel/logo-4.png' alt='')
                .logo-item
                    .tablecell-inner
                        img(src='img/logo-carousel/logo-5.png' alt='')
    // Partner Logo Section End
