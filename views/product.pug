                            .product-price
                                | $13.00
                .col-lg-3.col-sm-6
                    .product-item
                        .pi-pic
                            img(src='img/products/women-3.jpg' alt='')
                            .icon
                                i.icon_heart_alt
                            ul
                                li.w-icon.active
                                    a(href='#')
                                        i.icon_bag_alt
                                li.quick-view
                                    a(href='#') + Quick View
                                li.w-icon
                                    a(href='#')
                                        i.fa.fa-random
                        .pi-text
                            .catagory-name Towel
                            a(href='#')
                                h5 Pure Pineapple
                            .product-price
                                | $34.00
                .col-lg-3.col-sm-6
                    .product-item
                        .pi-pic
                            img(src='img/products/women-4.jpg' alt='')
                            .icon
                                i.icon_heart_alt
                            ul
                                li.w-icon.active
                                    a(href='#')
                                        i.icon_bag_alt
                                li.quick-view
                                    a(href='#') + Quick View
                                li.w-icon
                                    a(href='#')
                                        i.fa.fa-random
                        .pi-text
